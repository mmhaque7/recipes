---
import { getCollection, type CollectionEntry } from "astro:content";
type Recipe = CollectionEntry<"recipes">;

const recipes = await getCollection(
  "recipes",
  ({ data }: { data: Recipe["data"] }) => data.published !== false
);
const sorted = [...recipes].sort((a: Recipe, b: Recipe) =>
  a.data.title.localeCompare(b.data.title)
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Recipes</title>
  </head>
  <body>
    <h1>All Recipes</h1>
    <ul>
      {
        sorted.map((r: Recipe) => (
          <li>
            <a href={`/recipes/${r.slug}/`}>{r.data.title}</a>
            {r.data.tags?.length ? ` â€” ${r.data.tags.join(", ")}` : ""}
          </li>
        ))
      }
    </ul>
  </body>
</html>
